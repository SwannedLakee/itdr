% \placeholder{filename}{height}
\newcommand{\placeholder}[3][\linewidth]{%
	\noindent\begin{minipage}{#1}%
		\begin{mdframed}[	align=center,
						]%
			\parbox[t][#3-7.25pt][t]{#1}{\centering\vfill#2\vfill}%
